<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="p.radu.platform">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/favicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".PopupNoInternet"
            android:label="No Internet"
            android:theme="@style/PopupThemeDark" />
        <activity
            android:name=".PopupCameBack"
            android:label="Finished"
            android:theme="@style/PopupThemeDark" />
        <activity
            android:name=".PopupProgramFinished"
            android:label="Finished"
            android:theme="@style/PopupThemeDark" />
        <activity
            android:name=".PopupReset"
            android:label="Reset Password"
            android:theme="@style/PopupThemeDark" />
        <activity
            android:name=".PopupDelete"
            android:label="Are you sure ?"
            android:theme="@style/PopupThemeDark" />
        <activity android:name=".ActivityMyAccount" />
        <activity
            android:name=".PopupInfo"
            android:label="Tips"
            android:theme="@style/PopupThemeDark" />
        <activity
            android:name=".PopupAsurranceConnect"
            android:label=""
            android:theme="@style/PopupThemeDark" />
        <activity android:name=".ActivitySettings" />
        <activity
            android:name=".PopupAssuranceDeleteProgram"
            android:label=""
            android:theme="@style/PopupThemeDark" />
        <activity android:name=".ActivityAutomatedControlStart" />
        <activity
            android:name=".PopupAssuranceDeleteStep"
            android:label=""
            android:theme="@style/PopupThemeDark" />
        <activity
            android:name=".PopupEditStep"
            android:label="Edit Step"
            android:theme="@style/PopupThemeDark" />
        <activity
            android:name=".PopupSteps"
            android:label="Steps"
            android:theme="@style/PopupThemeLight" />
        <activity android:name=".ActivityAutomatedControlCreate" />
        <activity
            android:name=".ActivityMain"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityManualController" />
        <activity android:name=".ActivityLogin" />
        <activity android:name=".ActivityRegister" />
    </application>

</manifest>